{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "skipLibCheck": true,
    "outDir": "dist",
    "esModuleInterop": true, // Often helpful with NodeNext
    "resolveJsonModule": true, // Good practice for importing JSON if needed
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/lib/*": ["lib/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
